

{% extends 'base.html.twig' %}

{% block title %}Alumnes{% endblock %}

{% block body %}

    <div class="row m-0 mt-5 ">

        <div class=" col-sm-2 col-md-2 col-lg-2 mt-3">

            <h3>Alumnes</h3>
        </div>
        <div class="d-none d-sm-block col-sm-3 col-md-3 col-lg-3 p-0 mt-3"></div>


