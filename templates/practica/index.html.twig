{% extends 'base.html.twig' %}

{% block title %}Practica index{% endblock %}

{% block body %}


    <div class="row m-0 mt-5 ">

        <div class=" col-sm-2 col-md-2 col-lg-2 mt-3">

            <h3>Practiques</h3>
        </div>
        <div class="d-none d-sm-block col-sm-3 col-md-3 col-lg-3 p-0 mt-3"></div>


        <div class="d-none d-sm-block col-sm-4 col-md-5 col-lg-6 p-0 mt-3"></div>
        <div class="col-sm-3 col-md-2 col-lg-1 mt-3">

            <a href="{{ path('practica_new') }}" class="addNewlink">
                <div class="addNew">

                    <i class="fa fa-plus" aria-hidden="true"></i>
                </div>
            </a>

        </div>

    </div>
    <div class="row m-0 mt-2">
        <hr class="w-100">
    </div>

    <div class="row m-0 mt-3"> <!-- row empreses-->
    {% for practica in practicas %}

        <div class="col-sm-12 col-md-6 col-lg-6 py-3 "> <!-- primer col 6-->

            <div class="card shadow ">


                <div class="card-body">
                    <div class="contenedor bg-white">

                        <div class="row m-0">

                            <div class="d-none d-md-block col-sm-2 col-md-2 col-lg-2 p-2 "><!--Contenedor foto-->

                                <div class="icon-photo">

                                    <i class="fa fa-id-badge" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div class="col-8 p-2"> <!--Contenedor text-->

                                <div class="d-flex">
                                    <h5>{{ practica.alumne.nom }} - {{ practica.empresa.nom  }} </h5>
                                </div>
                                <span> {{ practica.periode}}/{{ practica.data ? practica.data|date('Y') : '' }}</span>
                            </div>

                            <div class="col-2 link-button "> <a href="{{ path('practica_show', {'id': practica.id}) }}"><button class="btn bg-turq shadow-none "><i class="fa fa-external-link shadow-none" aria-hidden="true"></i>
                                    </button></a></div><!--Contenedor link-->



                        </div>
                    </div>

                </div><!--fi card-body1-->
            </div>

        </div> <!-- fi primer col 6 -->
    {% else %}
        </div>
        <div class="row m-0">

            <div class="col-12 py-3">

                <h5>No s'han trobat registres de practiques. <a href="{{ path('practica_new') }}">Crear practica</a></h5>
            </div>

        </div>

    {% endfor %}

    <div class="row m-0"><!--Row de paginacio-->

        <div class="col-12 mt-3">

            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link shadow-none" href="#" tabindex="-1" aria-disabled="true">Previ</a>
                    </li>
                    <li class="page-item "><a class="page-link color-heavyBlue shadow-none " href="#">1</a></li>
                    <li class="page-item"><a class="page-link color-heavyBlue shadow-none" href="#">2</a></li>
                    <li class="page-item"><a class="page-link color-heavyBlue shadow-none" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link color-heavyBlue shadow-none" href="#">Seguent</a>
                    </li>
                </ul>
            </nav>
        </div>

    </div>
    {#<h1>Practica index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Periode</th>
                <th>Any</th>
